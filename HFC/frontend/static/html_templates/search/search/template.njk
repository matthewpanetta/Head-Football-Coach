{% include "../../static/html_templates/common_templates/ext_nav_bar.njk" %}
{% include "../../static/html_templates/common_templates/ext_team_coloring.njk" %}

<head>


</head>
<body>
  <div class='PageContent'>

      <nav>
        <div class="w3-bar team-bar" id="nav-tab" style="background-color: #{{page.PrimaryColor}}; border-bottom: 3px solid #{{page.SecondaryColor}}; border-top: 3px solid #{{page.SecondaryColor}};  color: white; ">
          <button class='w3-bar-item btn tab nav-tab-button show-small'  id="nav-sidebar-tab" style="">
              <i class="fas fa-bars"></i>
          </button>
          <button class="w3-bar-item btn tab nav-tab-button selected-tab"  id="nav-overview-tab" style="background-color: #{{page.SecondaryColor}};">Results</button>
        </div>
      </nav>
      <div class="" id="nav-tabContent">
        <div class="tab-pane show active tab-content" id="nav-overview">
          <div class="w3-display-container">
            <div class="w3-row-padding">
              {% if search_results.Players|length > 0%}
              <div class='w3-col l6 m10'>

                <div class="card w3-margin-bottom">
                  <div class="">

                        <div class="w3-bar team-primary-background-bar drive-event-bar">
                          <div class='w3-bar-item  margin-right-12 no-padding'>Players</div>
                        </div>
                        <table class=' table table-striped table-hover' id='player-search-table' style='width: 100%;'>
                          <thead class='center-text-row'>
                            <th class='left-text' colspan="">Team</th>
                            <th></th>
                            <th class='left-text'>Player</th>
                            <th>Pos</th>
                            <th>Class</th>
                            <th>Last Played</th>
                            <th>Overall</th>
                          </thead>
                          <tbody>
                          {% for player in search_results.Players%}
                            <tr class='center-text-row'>
                              <td class='column-shrink' style='background-color: #{{player.player_team_season.team_season.team.team_color_primary_hex}};'>
                                <img class='logo logo-50' src="{{player.player_team_season.team_season.team.team_logo}}" alt="">
                              </td>
                              <td class='left-text column-shrink nowrap' style='background-color: #{{player.player_team_season.team_season.team.team_color_primary_hex}}; color:white;'>
                                <a href="{{player.player_team_season.team_season.team.team_href}}">{{player.player_team_season.team_season.team.full_name}}</a>

                              </td>
                              <td class='left-text'>
                                <a href="{{player.player_href}}">{{player.full_name}}</a>

                              </td>
                              <td>{{player.position}}</td>
                              <td>{{player.player_team_season.class.class_name}}</td>
                              <td>{{player.player_team_season.season}}</td>
                              <td>{{player.player_team_season.ratings.overall.overall}}</td>
                            </tr>
                          {% endfor %}
                          </tbody>
                        </table>

                  </div>
                </div>
              </div>
              {% endif %}

              {% if search_results.Teams|length > 0%}
              <div class='w3-col l6 m10'>

                <div class="card w3-margin-bottom">
                  <div class="w3-bar team-primary-background-bar drive-event-bar">
                    <div class='w3-bar-item  margin-right-12 no-padding'>Teams</div>
                  </div>
                  <table class=' table table-striped table-hover' id='team-search-table' style='width: 100%;'>
                    <thead class='center-text-row'>
                      <th class='left-text' ></th>
                      <th>Team</th>
                      <th>City</th>
                    </thead>
                    <tbody>
                    {% for team in search_results.Teams%}
                      <tr class='center-text-row'>
                        <td class='column-shrink' style='background-color: #{{team.team_color_primary_hex}};'>
                          <img class='logo logo-50' src="{{team.team_logo}}" alt="">
                        </td>
                        <td class='nowrap' style='background-color: #{{team.team_color_primary_hex}}; color:white;'>
                          <a href="{{team.team_href}}">{{team.full_name}}</a>

                        </td>
                        <td class=''>
                          {{team.location.city}}, {{team.location.state}}

                        </td>
                      </tr>
                    {% endfor %}
                    </tbody>
                  </table>

                </div>
              </div>
              {% endif %}

              {% if total_results == 0 %}
              No search results for {{search_keywords}}

              {% endif %}

            </div>
          </div>
        </div>
      </div>

    </div>
</body>
