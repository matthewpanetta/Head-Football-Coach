<style>
    {# .football-table-column-headers th {
        background-color: #{{page.SecondaryColor}};
    }

    .football-table-column-headers.primary-color-row th {
        background-color: #{{page.PrimaryColor}};
    } #}
</style>

{% if player_stats_show.Passing %}
  <div class='card margin-bottom-24'>
    <div class='w3-bar team-primary-background-bar'>
      Passing Stats
    </div>
    <div style='width:100%;'>

      <table class='football-table-content font14' style=' width:100%; '>
        <thead class='football-table-header  minor-bold white-text center-text' style=' width: 100%;'>
          <tr class='football-table-column-headers unselectable team-secondary-table-row' style=' height: 30px; '>
            <th>Season</th>
            <th>Team</th>
            <th>Class</th>

            <th>Yards</th>
            <th>Att</th>
            <th>Cmp</th>
            <th>Cmp%</th>
            <th>TDs</th>
            <th>INTs</th>
          </tr>
        </thead>
        <tbody class='football-table-body center-text vertical-align-middle' style='width: 100%;'>
          {% for player_team_season in player_team_seasons%}
          {{player_team_season|log}}
          <tr class='football-table-row  ' style='height: 50px;'>
            <td style='color:white; background-color: #{{player_team_season.team_season.team.team_color_primary_hex}};'>{{player_team_season.season}}</td>
            <td style='color:white; background-color: #{{player_team_season.team_season.team.team_color_primary_hex}};'>
              <a>
                <img class='logo logo-30' src='{{player_team_season.team_season.team.team_logo}}'/>
              </a>
            </td>
            <td>{{player_team_season.class.class_name}}</td>

            <td value='{{player_team_season.season_stats.passing.yards|toLocaleString|OrZero}}'>{{player_team_season.season_stats.passing.yards|toLocaleString|OrZero}}</td>
            <td value='{{player_team_season.season_stats.passing.attempts|OrZero}}'>{{player_team_season.season_stats.passing.attempts|OrZero}}</td>
            <td value='{{player_team_season.season_stats.passing.completions|OrZero}}'>{{player_team_season.season_stats.passing.completions|OrZero}}</td>
            <td value='{{player_team_season.season_stats.passing_completion_percentage}}'>{{player_team_season.season_stats.passing_completion_percentage}}</td>
            <td value='{{player_team_season.season_stats.passing.tds|OrZero}}'>{{player_team_season.season_stats.passing.tds|OrZero}}</td>
            <td value='{{player_team_season.season_stats.passing.ints|OrZero}}'  >{{player_team_season.season_stats.passing.ints|OrZero}}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endif %}


