<style>  
  .default-coloring {
    background-color: #1763B2;
    color: white;
  }</style>

<div class="w3-row-padding ">
  <div class=" w3-col s10 w3-padding">
    <div class="card">
      <table class='table table-striped table-hover width100'>
        <thead>
          <tr class='default-coloring center-text-row' style='border-top: 4px solid #333333;'>
            <th class='left-text'>Table in {{db.name}}</th>
            <th class='left-text'>Primary Key</th>
            <th class='left-text'>Indeces</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for table in tables %}
            {{table|log}}
            <tr class='center-text-row'>
              <td class='left-text'>{{table.name}}</td>
              <td class='left-text'>
                {{table.schema.primKey.keyPath}}
              </td>
              <td class='left-text'>
                <div>
                  {% for index in table.schema.indexes%}
                  <div>
                    {{index.name}}
                  </div>
                  {% endfor %}
                </div>
              </td>
              <td>
                <a href='{{db.name}}/Table/{{table.name}}' class="btn team-color-button default-coloring width100" style='border-radius: 5px;'>
                Inspect
              </a>
              </td>

              <td>
                <div class="btn default-coloring width100 w3-red" style='border-radius: 5px;'>
                Delete
              </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

  </div>
</div>