<style>
  .default-coloring {
    background-color: #1763B2;
    color: white;
  }
</style>

<div class="w3-row-padding ">
  <div class=" w3-col s10 w3-padding">
    <div class="card">
      <table class='table table-striped table-hover width100'>
        <thead>
          <tr class='default-coloring center-text-row' style='border-top: 4px solid #333333;'>
            <th class='left-text'>Database Name</th>
            <th class='left-text'>Version</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for database in databases %}
          {{database|log}}
          <tr class='center-text-row'>
            <td class='left-text'>{{database.name}}</td>
            <td class='left-text'>{{database.version}}</td>
            <td>
              <a href='admin/Database/{{database.name}}' class="btn default-coloring width100" style='border-radius: 5px;'>
                Inspect
              </a>
            </td>
            <td>
              <div class="btn default-coloring width100 w3-red" style='border-radius: 5px;'>
                Delete
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

  </div>
</div>